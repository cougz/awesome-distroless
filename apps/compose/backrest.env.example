# Backrest Web UI Configuration
# Port and binding configuration
BACKREST_PORT=0.0.0.0:9898
BACKREST_WEB_PORT=9898

# Timezone configuration
TZ=UTC

# User/Group IDs for file permissions (1000 is the default non-root user in distroless)
PUID=1000
PGID=1000

# Path Configuration
# Source data to backup (local path that will be mounted as /userdata in container)
BACKUP_SOURCE_PATH=./data

# Tmpfs Size (temporary file storage for backup operations)
# Backrest may need significant space for compression, deduplication, etc.
TMPFS_SIZE=2G