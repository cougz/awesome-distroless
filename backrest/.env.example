# Build Configuration (used during Docker build)
APP_UID=1000
APP_GID=1000
TZ=UTC
BACKREST_VERSION=1.9.1

# Runtime Configuration
COMPOSE_PROJECT_NAME=backrest
WEB_PORT=9898

# Backrest Web UI Configuration
BACKREST_PORT=0.0.0.0:9898

# Path Configuration
# Source data to backup (local path that will be mounted as /userdata in container)
BACKUP_SOURCE_PATH=./data

# System Configuration
# Backrest may need significant space for compression, deduplication, etc.
TMPFS_SIZE=2G